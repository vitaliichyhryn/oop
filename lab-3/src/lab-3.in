#!@PYTHON@


import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('lab-3', localedir)
locale.textdomain('lab-3')
gettext.install('lab-3', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'lab-3.gresource'))
    resource._register()

    from lab_3 import main
    sys.exit(main.main(VERSION))
